<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n">

    <object name="user" meta_type="CMF Action Category">
        <object name="create_event" meta_type="CMF Action" i18n:domain="ftw.footballchallenge">
            <property name="title" i18n:translate="">Create Event</property>
            <property name="url_expr">string:${portal_url}/create_event</property>
            <property name="permissions">
                <element value="ftw.footballchallenge: Manage Event"/>
            </property>
    </object>
    <object name="create_game" meta_type="CMF Action" i18n:domain="ftw.footballchallenge">
        <property name="title" i18n:translate="">Create Game</property>
        <property name="url_expr">string:${portal_url}/create_game</property>
        <property name="permissions">
            <element value="ftw.footballchallenge: Manage Event"/>
        </property>
    </object>

    <object name="assign_user" meta_type="CMF Action" i18n:domain="ftw.footballchallenge">
        <property name="title" i18n:translate="">Assign User</property>
        <property name="url_expr">string:${portal_url}/assign_user</property>
        <property name="permissions">
            <element value="ftw.footballchallenge: Manage Event"/>
        </property>
    </object>
    
        <object name="edit_team" meta_type="CMF Action" i18n:domain="ftw.footballchallenge">
            <property name="title" i18n:translate="">Edit Team</property>
            <property name="url_expr">string:${portal_url}/edit_team</property>
            <property name="permissions">
                <element value="ftw.footballchallenge: Play"/>
            </property>
        </object>
</object>
        <object name="view_team" meta_type="CMF Action" i18n:domain="ftw.footballchallenge">
            <property name="title" i18n:translate="">My Team</property>
            <property name="url_expr">string:${portal_url}/team_overview</property>
            <property name="permissions">
                <element value="ftw.footballchallenge: Play"/>
            </property>
        </object>
</object>
</object>